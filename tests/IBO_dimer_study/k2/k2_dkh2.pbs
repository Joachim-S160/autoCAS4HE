#!/bin/bash
# K2 DKH2 relativistic HF calculation
# Generated by generate_dimer_tests.sh
#
#PBS -N k2_dkh2
#PBS -A 2025_127
#PBS -l nodes=1:ppn=8
#PBS -l walltime=02:00:00
#PBS -l mem=32gb

# ==============================================================================
# Setup environment
# ==============================================================================
PROJECT="starting_2025_097"
INSTALL_DIR="/dodrio/scratch/projects/${PROJECT}/autoCAS4HE_built/autoCAS4HE"
source ${INSTALL_DIR}/setup_hortense.sh
export MOLCAS_WORKDIR=$(pwd)

cd $PBS_O_WORKDIR

echo "=============================================="
echo "  K2 DKH2 Relativistic HF Calculation"
echo "=============================================="
echo "Working directory: $(pwd)"
echo "Date: $(date)"
echo ""

# ==============================================================================
# Run OpenMolcas SCF for both geometries
# ==============================================================================
mkdir -p k2_0_workdir k2_1_workdir

# Geometry 0 (equilibrium)
echo "Running K2 geometry 0 (equilibrium)..."
cd k2_0_workdir
cp ../k2_0.xyz .
cp ../k2_0_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_0
mkdir -p $MOLCAS_WORKDIR
pymolcas k2_0_scf.input > k2_0_scf.log 2>&1
if [ -f "k2_0_scf/k2_0_scf.scf.h5" ]; then
    cp k2_0_scf/k2_0_scf.scf.h5 ../k2_0.scf.h5
    echo "  Created k2_0.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 0"
fi
cd ..

# Geometry 1 (stretched)
echo "Running K2 geometry 1 (stretched)..."
cd k2_1_workdir
cp ../k2_1.xyz .
cp ../k2_1_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_1
mkdir -p $MOLCAS_WORKDIR
pymolcas k2_1_scf.input > k2_1_scf.log 2>&1
if [ -f "k2_1_scf/k2_1_scf.scf.h5" ]; then
    cp k2_1_scf/k2_1_scf.scf.h5 ../k2_1.scf.h5
    echo "  Created k2_1.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 1"
fi
cd ..

# ==============================================================================
# Run IBO distribution analysis
# ==============================================================================
echo ""
echo "Running IBO distribution analysis..."
SCRIPT_DIR="/dodrio/scratch/projects/starting_2025_097/autoCAS4HE_built/autoCAS4HE/scripts"
if [ -f "k2_0.scf.h5" ]; then
    python3 ${SCRIPT_DIR}/IBO_distr.py k2_0.scf.h5 --element k
fi

echo ""
echo "=============================================="
echo "  K2 calculation completed!"
echo "=============================================="
echo "Date: $(date)"
