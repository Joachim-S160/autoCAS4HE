#!/bin/bash
# Po2 DKH2 relativistic HF calculation
# Generated by generate_dimer_tests.sh
#
#PBS -N po2_dkh2
#PBS -A 2025_127
#PBS -l nodes=1:ppn=8
#PBS -l walltime=02:00:00
#PBS -l mem=32gb

# ==============================================================================
# Setup environment
# ==============================================================================
PROJECT="starting_2025_097"
INSTALL_DIR="/dodrio/scratch/projects/${PROJECT}/autoCAS4HE_built/autoCAS4HE"
source ${INSTALL_DIR}/setup_hortense.sh
export MOLCAS_WORKDIR=$(pwd)

cd $PBS_O_WORKDIR

echo "=============================================="
echo "  Po2 DKH2 Relativistic HF Calculation"
echo "=============================================="
echo "Working directory: $(pwd)"
echo "Date: $(date)"
echo ""

# ==============================================================================
# Run OpenMolcas SCF for both geometries
# ==============================================================================
mkdir -p po2_0_workdir po2_1_workdir

# Geometry 0 (equilibrium)
echo "Running Po2 geometry 0 (equilibrium)..."
cd po2_0_workdir
cp ../po2_0.xyz .
cp ../po2_0_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_0
mkdir -p $MOLCAS_WORKDIR
pymolcas po2_0_scf.input > po2_0_scf.log 2>&1
if [ -f "po2_0_scf/po2_0_scf.scf.h5" ]; then
    cp po2_0_scf/po2_0_scf.scf.h5 ../po2_0.scf.h5
    echo "  Created po2_0.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 0"
fi
cd ..

# Geometry 1 (stretched)
echo "Running Po2 geometry 1 (stretched)..."
cd po2_1_workdir
cp ../po2_1.xyz .
cp ../po2_1_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_1
mkdir -p $MOLCAS_WORKDIR
pymolcas po2_1_scf.input > po2_1_scf.log 2>&1
if [ -f "po2_1_scf/po2_1_scf.scf.h5" ]; then
    cp po2_1_scf/po2_1_scf.scf.h5 ../po2_1.scf.h5
    echo "  Created po2_1.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 1"
fi
cd ..

# ==============================================================================
# Run IBO distribution analysis
# ==============================================================================
echo ""
echo "Running IBO distribution analysis..."
SCRIPT_DIR="/dodrio/scratch/projects/starting_2025_097/autoCAS4HE_built/autoCAS4HE/scripts"
if [ -f "po2_0.scf.h5" ]; then
    python3 ${SCRIPT_DIR}/IBO_distr.py po2_0.scf.h5 --element po
fi

echo ""
echo "=============================================="
echo "  Po2 calculation completed!"
echo "=============================================="
echo "Date: $(date)"
