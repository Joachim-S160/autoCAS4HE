#!/bin/bash
# O2 DKH2 relativistic HF calculation
# Generated by generate_dimer_tests.sh
#
#PBS -N o2_dkh2
#PBS -A 2025_127
#PBS -l nodes=1:ppn=8
#PBS -l walltime=02:00:00
#PBS -l mem=32gb
#PBS -M joachim.scheerlinck@ugent.be
#PBS -m e

# ==============================================================================
# Setup environment
# ==============================================================================
PROJECT="starting_2025_097"
INSTALL_DIR="/dodrio/scratch/projects/${PROJECT}/autoCAS4HE_built/autoCAS4HE"
source ${INSTALL_DIR}/setup_hortense.sh
export MOLCAS_WORKDIR=$(pwd)

cd $PBS_O_WORKDIR

echo "=============================================="
echo "  O2 DKH2 Relativistic HF Calculation"
echo "=============================================="
echo "Working directory: $(pwd)"
echo "Date: $(date)"
echo ""

# ==============================================================================
# Run OpenMolcas SCF for both geometries
# ==============================================================================
mkdir -p o2_0_workdir o2_1_workdir

# Geometry 0 (equilibrium)
echo "Running O2 geometry 0 (equilibrium)..."
cd o2_0_workdir
cp ../o2_0.xyz .
cp ../o2_0_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_0
mkdir -p $MOLCAS_WORKDIR
pymolcas o2_0_scf.input > o2_0_scf.log 2>&1
if [ -f "o2_0_scf/o2_0_scf.scf.h5" ]; then
    cp o2_0_scf/o2_0_scf.scf.h5 ../o2_0.scf.h5
    echo "  Created o2_0.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 0"
fi
cd ..

# Geometry 1 (stretched)
echo "Running O2 geometry 1 (stretched)..."
cd o2_1_workdir
cp ../o2_1.xyz .
cp ../o2_1_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_1
mkdir -p $MOLCAS_WORKDIR
pymolcas o2_1_scf.input > o2_1_scf.log 2>&1
if [ -f "o2_1_scf/o2_1_scf.scf.h5" ]; then
    cp o2_1_scf/o2_1_scf.scf.h5 ../o2_1.scf.h5
    echo "  Created o2_1.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 1"
fi
cd ..

# ==============================================================================
# Run IBO distribution analysis
# ==============================================================================
echo ""
echo "Running IBO distribution analysis..."
SCRIPT_DIR="/dodrio/scratch/projects/starting_2025_097/autoCAS4HE_built/autoCAS4HE/scripts"
if [ -f "o2_0.scf.h5" ]; then
    python3 ${SCRIPT_DIR}/IBO_distr.py o2_0.scf.h5 --element o --hpc
fi

echo ""
echo "=============================================="
echo "  O2 calculation completed!"
echo "=============================================="
echo "Date: $(date)"
