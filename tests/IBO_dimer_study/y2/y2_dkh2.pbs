#!/bin/bash
# Y2 DKH2 relativistic HF calculation
# Generated by generate_dimer_tests.sh
#
#PBS -N y2_dkh2
#PBS -A 2025_127
#PBS -l nodes=1:ppn=8
#PBS -l walltime=02:00:00
#PBS -l mem=32gb

# ==============================================================================
# Setup environment
# ==============================================================================
PROJECT="starting_2025_097"
INSTALL_DIR="/dodrio/scratch/projects/${PROJECT}/autoCAS4HE_built/autoCAS4HE"
source ${INSTALL_DIR}/setup_hortense.sh
export MOLCAS_WORKDIR=$(pwd)

cd $PBS_O_WORKDIR

echo "=============================================="
echo "  Y2 DKH2 Relativistic HF Calculation"
echo "=============================================="
echo "Working directory: $(pwd)"
echo "Date: $(date)"
echo ""

# ==============================================================================
# Run OpenMolcas SCF for both geometries
# ==============================================================================
mkdir -p y2_0_workdir y2_1_workdir

# Geometry 0 (equilibrium)
echo "Running Y2 geometry 0 (equilibrium)..."
cd y2_0_workdir
cp ../y2_0.xyz .
cp ../y2_0_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_0
mkdir -p $MOLCAS_WORKDIR
pymolcas y2_0_scf.input > y2_0_scf.log 2>&1
if [ -f "y2_0_scf/y2_0_scf.scf.h5" ]; then
    cp y2_0_scf/y2_0_scf.scf.h5 ../y2_0.scf.h5
    echo "  Created y2_0.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 0"
fi
cd ..

# Geometry 1 (stretched)
echo "Running Y2 geometry 1 (stretched)..."
cd y2_1_workdir
cp ../y2_1.xyz .
cp ../y2_1_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_1
mkdir -p $MOLCAS_WORKDIR
pymolcas y2_1_scf.input > y2_1_scf.log 2>&1
if [ -f "y2_1_scf/y2_1_scf.scf.h5" ]; then
    cp y2_1_scf/y2_1_scf.scf.h5 ../y2_1.scf.h5
    echo "  Created y2_1.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 1"
fi
cd ..

# ==============================================================================
# Run IBO distribution analysis
# ==============================================================================
echo ""
echo "Running IBO distribution analysis..."
SCRIPT_DIR="/dodrio/scratch/projects/starting_2025_097/autoCAS4HE_built/autoCAS4HE/scripts"
if [ -f "y2_0.scf.h5" ]; then
    python3 ${SCRIPT_DIR}/IBO_distr.py y2_0.scf.h5 --element y
fi

echo ""
echo "=============================================="
echo "  Y2 calculation completed!"
echo "=============================================="
echo "Date: $(date)"
