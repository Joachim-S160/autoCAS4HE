#!/bin/bash
# I2 DKH2 relativistic HF calculation
# Generated by generate_dimer_tests.sh
#
#PBS -N i2_dkh2
#PBS -A 2025_127
#PBS -l nodes=1:ppn=8
#PBS -l walltime=02:00:00
#PBS -l mem=32gb
#PBS -M joachim.scheerlinck@ugent.be
#PBS -m e

# ==============================================================================
# Setup environment
# ==============================================================================
PROJECT="starting_2025_097"
INSTALL_DIR="/dodrio/scratch/projects/${PROJECT}/autoCAS4HE_built/autoCAS4HE"
source ${INSTALL_DIR}/setup_hortense.sh
export MOLCAS_WORKDIR=$(pwd)

cd $PBS_O_WORKDIR

echo "=============================================="
echo "  I2 DKH2 Relativistic HF Calculation"
echo "=============================================="
echo "Working directory: $(pwd)"
echo "Date: $(date)"
echo ""

# ==============================================================================
# Run OpenMolcas SCF for both geometries
# ==============================================================================
mkdir -p i2_0_workdir i2_1_workdir

# Geometry 0 (equilibrium)
echo "Running I2 geometry 0 (equilibrium)..."
cd i2_0_workdir
cp ../i2_0.xyz .
cp ../i2_0_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_0
mkdir -p $MOLCAS_WORKDIR
pymolcas i2_0_scf.input > i2_0_scf.log 2>&1
if [ -f "i2_0_scf/i2_0_scf.scf.h5" ]; then
    cp i2_0_scf/i2_0_scf.scf.h5 ../i2_0.scf.h5
    echo "  Created i2_0.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 0"
fi
cd ..

# Geometry 1 (stretched)
echo "Running I2 geometry 1 (stretched)..."
cd i2_1_workdir
cp ../i2_1.xyz .
cp ../i2_1_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_1
mkdir -p $MOLCAS_WORKDIR
pymolcas i2_1_scf.input > i2_1_scf.log 2>&1
if [ -f "i2_1_scf/i2_1_scf.scf.h5" ]; then
    cp i2_1_scf/i2_1_scf.scf.h5 ../i2_1.scf.h5
    echo "  Created i2_1.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 1"
fi
cd ..

# ==============================================================================
# Run IBO distribution analysis
# ==============================================================================
echo ""
echo "Running IBO distribution analysis..."
SCRIPT_DIR="/dodrio/scratch/projects/starting_2025_097/autoCAS4HE_built/autoCAS4HE/scripts"
if [ -f "i2_0.scf.h5" ]; then
    python3 ${SCRIPT_DIR}/IBO_distr.py i2_0.scf.h5 --element i
fi

echo ""
echo "=============================================="
echo "  I2 calculation completed!"
echo "=============================================="
echo "Date: $(date)"
