#!/bin/bash
# Os2 DKH2 relativistic HF calculation
# Generated by generate_dimer_tests.sh
#
#PBS -N os2_dkh2
#PBS -A 2025_127
#PBS -l nodes=1:ppn=8
#PBS -l walltime=02:00:00
#PBS -l mem=32gb

# ==============================================================================
# Setup environment
# ==============================================================================
PROJECT="starting_2025_097"
INSTALL_DIR="/dodrio/scratch/projects/${PROJECT}/autoCAS4HE_built/autoCAS4HE"
source ${INSTALL_DIR}/setup_hortense.sh
export MOLCAS_WORKDIR=$(pwd)

cd $PBS_O_WORKDIR

echo "=============================================="
echo "  Os2 DKH2 Relativistic HF Calculation"
echo "=============================================="
echo "Working directory: $(pwd)"
echo "Date: $(date)"
echo ""

# ==============================================================================
# Run OpenMolcas SCF for both geometries
# ==============================================================================
mkdir -p os2_0_workdir os2_1_workdir

# Geometry 0 (equilibrium)
echo "Running Os2 geometry 0 (equilibrium)..."
cd os2_0_workdir
cp ../os2_0.xyz .
cp ../os2_0_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_0
mkdir -p $MOLCAS_WORKDIR
pymolcas os2_0_scf.input > os2_0_scf.log 2>&1
if [ -f "os2_0_scf/os2_0_scf.scf.h5" ]; then
    cp os2_0_scf/os2_0_scf.scf.h5 ../os2_0.scf.h5
    echo "  Created os2_0.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 0"
fi
cd ..

# Geometry 1 (stretched)
echo "Running Os2 geometry 1 (stretched)..."
cd os2_1_workdir
cp ../os2_1.xyz .
cp ../os2_1_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_1
mkdir -p $MOLCAS_WORKDIR
pymolcas os2_1_scf.input > os2_1_scf.log 2>&1
if [ -f "os2_1_scf/os2_1_scf.scf.h5" ]; then
    cp os2_1_scf/os2_1_scf.scf.h5 ../os2_1.scf.h5
    echo "  Created os2_1.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 1"
fi
cd ..

# ==============================================================================
# Run IBO distribution analysis
# ==============================================================================
echo ""
echo "Running IBO distribution analysis..."
SCRIPT_DIR="/dodrio/scratch/projects/starting_2025_097/autoCAS4HE_built/autoCAS4HE/scripts"
if [ -f "os2_0.scf.h5" ]; then
    python3 ${SCRIPT_DIR}/IBO_distr.py os2_0.scf.h5 --element os
fi

echo ""
echo "=============================================="
echo "  Os2 calculation completed!"
echo "=============================================="
echo "Date: $(date)"
