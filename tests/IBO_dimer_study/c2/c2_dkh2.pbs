#!/bin/bash
# C2 DKH2 relativistic HF calculation
# Generated by generate_dimer_tests.sh
#
#PBS -N c2_dkh2
#PBS -A 2025_127
#PBS -l nodes=1:ppn=8
#PBS -l walltime=02:00:00
#PBS -l mem=32gb

# ==============================================================================
# Setup environment
# ==============================================================================
PROJECT="starting_2025_097"
INSTALL_DIR="/dodrio/scratch/projects/${PROJECT}/autoCAS4HE_built/autoCAS4HE"
source ${INSTALL_DIR}/setup_hortense.sh
export MOLCAS_WORKDIR=$(pwd)

cd $PBS_O_WORKDIR

echo "=============================================="
echo "  C2 DKH2 Relativistic HF Calculation"
echo "=============================================="
echo "Working directory: $(pwd)"
echo "Date: $(date)"
echo ""

# ==============================================================================
# Run OpenMolcas SCF for both geometries
# ==============================================================================
mkdir -p c2_0_workdir c2_1_workdir

# Geometry 0 (equilibrium)
echo "Running C2 geometry 0 (equilibrium)..."
cd c2_0_workdir
cp ../c2_0.xyz .
cp ../c2_0_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_0
mkdir -p $MOLCAS_WORKDIR
pymolcas c2_0_scf.input > c2_0_scf.log 2>&1
if [ -f "c2_0_scf/c2_0_scf.scf.h5" ]; then
    cp c2_0_scf/c2_0_scf.scf.h5 ../c2_0.scf.h5
    echo "  Created c2_0.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 0"
fi
cd ..

# Geometry 1 (stretched)
echo "Running C2 geometry 1 (stretched)..."
cd c2_1_workdir
cp ../c2_1.xyz .
cp ../c2_1_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_1
mkdir -p $MOLCAS_WORKDIR
pymolcas c2_1_scf.input > c2_1_scf.log 2>&1
if [ -f "c2_1_scf/c2_1_scf.scf.h5" ]; then
    cp c2_1_scf/c2_1_scf.scf.h5 ../c2_1.scf.h5
    echo "  Created c2_1.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 1"
fi
cd ..

# ==============================================================================
# Run IBO distribution analysis
# ==============================================================================
echo ""
echo "Running IBO distribution analysis..."
SCRIPT_DIR="/dodrio/scratch/projects/starting_2025_097/autoCAS4HE_built/autoCAS4HE/scripts"
if [ -f "c2_0.scf.h5" ]; then
    python3 ${SCRIPT_DIR}/IBO_distr.py c2_0.scf.h5 --element c
fi

echo ""
echo "=============================================="
echo "  C2 calculation completed!"
echo "=============================================="
echo "Date: $(date)"
