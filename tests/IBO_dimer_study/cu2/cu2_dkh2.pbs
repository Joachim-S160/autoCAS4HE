#!/bin/bash
# Cu2 DKH2 relativistic HF calculation
# Generated by generate_dimer_tests.sh
#
#PBS -N cu2_dkh2
#PBS -A 2025_127
#PBS -l nodes=1:ppn=8
#PBS -l walltime=02:00:00
#PBS -l mem=32gb

# ==============================================================================
# Setup environment
# ==============================================================================
PROJECT="starting_2025_097"
INSTALL_DIR="/dodrio/scratch/projects/${PROJECT}/autoCAS4HE_built/autoCAS4HE"
source ${INSTALL_DIR}/setup_hortense.sh
export MOLCAS_WORKDIR=$(pwd)

cd $PBS_O_WORKDIR

echo "=============================================="
echo "  Cu2 DKH2 Relativistic HF Calculation"
echo "=============================================="
echo "Working directory: $(pwd)"
echo "Date: $(date)"
echo ""

# ==============================================================================
# Run OpenMolcas SCF for both geometries
# ==============================================================================
mkdir -p cu2_0_workdir cu2_1_workdir

# Geometry 0 (equilibrium)
echo "Running Cu2 geometry 0 (equilibrium)..."
cd cu2_0_workdir
cp ../cu2_0.xyz .
cp ../cu2_0_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_0
mkdir -p $MOLCAS_WORKDIR
pymolcas cu2_0_scf.input > cu2_0_scf.log 2>&1
if [ -f "cu2_0_scf/cu2_0_scf.scf.h5" ]; then
    cp cu2_0_scf/cu2_0_scf.scf.h5 ../cu2_0.scf.h5
    echo "  Created cu2_0.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 0"
fi
cd ..

# Geometry 1 (stretched)
echo "Running Cu2 geometry 1 (stretched)..."
cd cu2_1_workdir
cp ../cu2_1.xyz .
cp ../cu2_1_scf.input .
export MOLCAS_WORKDIR=$(pwd)/scratch_1
mkdir -p $MOLCAS_WORKDIR
pymolcas cu2_1_scf.input > cu2_1_scf.log 2>&1
if [ -f "cu2_1_scf/cu2_1_scf.scf.h5" ]; then
    cp cu2_1_scf/cu2_1_scf.scf.h5 ../cu2_1.scf.h5
    echo "  Created cu2_1.scf.h5"
else
    echo "WARNING: Could not find scf.h5 for geometry 1"
fi
cd ..

# ==============================================================================
# Run IBO distribution analysis
# ==============================================================================
echo ""
echo "Running IBO distribution analysis..."
SCRIPT_DIR="/dodrio/scratch/projects/starting_2025_097/autoCAS4HE_built/autoCAS4HE/scripts"
if [ -f "cu2_0.scf.h5" ]; then
    python3 ${SCRIPT_DIR}/IBO_distr.py cu2_0.scf.h5 --element cu
fi

echo ""
echo "=============================================="
echo "  Cu2 calculation completed!"
echo "=============================================="
echo "Date: $(date)"
